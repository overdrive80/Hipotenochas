<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo gris -->
    <item android:drawable="@color/grisborde" />

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="0dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/grisboton"/>

        </shape>
    </item>


    <!-- Imagen PNG centrada -->
    <item>
        <bitmap
            android:src="@drawable/ic_hipo_flamenca_base"
             />
    </item>
</layer-list>